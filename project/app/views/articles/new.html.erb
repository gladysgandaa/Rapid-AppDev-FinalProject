<div class="article_form">
  
<h1>New Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <p>
    <%= form.label :Title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :Text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
  Temporary user id
    <%= form.label :User %><br>
    <%= form.text_field :user %>
  </p>
 
  <p>
    <%= form.label :Topic %><br>
    <%= form.select :topic, ['AI', 'Virtual Reality', 'RMIT', 'Machine Learning']%>
  </p>

   <p>
    <%= form.submit %>
  </p>
<% end %>
</div>
